# Service Configuration
NODE_ENV=development
PORT=3003
SERVICE_NAME=opsmind-workflow

# MySQL Database Configuration
DB_HOST=opsmind-mysql
DB_PORT=3306
DB_USER=root
DB_PASSWORD=root_password
DB_DATABASE=workflow_db
DB_CONNECTION_LIMIT=10
DB_WAIT_FOR_CONNECTIONS=true
DB_QUEUE_LIMIT=0

# External Services (Docker container names)
AUTH_SERVICE_URL=http://opsmind-author:3001
TICKET_SERVICE_URL=http://opsmind-ticket:3002

# Logging
LOG_LEVEL=info

# SLA Configuration (in minutes)
SLA_CRITICAL=60
SLA_HIGH=120
SLA_MEDIUM=240
SLA_LOW=480

# Escalation Configuration
MAX_REASSIGNMENT_COUNT=2
AUTO_ESCALATE_ON_REOPEN_COUNT=3
